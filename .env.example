# Environment Configuration
# Copy this file to .env and fill in your values

# OpenClaw Configuration
# See: https://docs.openclaw.ai for full configuration options

# Model Configuration (choose one or more)
# Anthropic (recommended for best results)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI (alternative)
# OPENAI_API_KEY=your_openai_api_key_here

# Gateway Configuration
OPENCLAW_GATEWAY_PORT=18790
OPENCLAW_GATEWAY_BIND=loopback

# Skills Configuration
OPENCLAW_SKILLS_DIRS=./skills

# Channel Configuration (uncomment to enable)
# OPENCLAW_WHATSAPP_ENABLED=true
# OPENCLAW_TELEGRAM_ENABLED=true
# OPENCLAW_TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Empathy Anchor Settings
EMPATHY_ANCHOR_ENABLED=true
EMPATHY_ANCHOR_MODE=youth_support

# Privacy Settings
OPENCLAW_PRIVACY_MODE=strict
OPENCLAW_DATA_RETENTION=local_only

# Logging
OPENCLAW_LOG_LEVEL=info

# Luna Safety Module Configuration
# JWT Secret Key (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your_secret_key_here_generate_with_secrets_token_hex_32

# Firebase Credentials Path for Luna Safety Alerts
FIREBASE_CRED_PATH=serviceAccountKey.json

# Flask Debug Mode (set to true only for development, false for production)
FLASK_DEBUG=false
