# MindMend Super AI Backend - Environment Variables
# Copy this file to .env and update with your values

# Flask Configuration
JWT_SECRET_KEY=change-this-to-a-random-secret-key-in-production
OFFLINE_MODE=true
DEBUG=false
PORT=5000

# Optional: Enable spaCy NLP (requires: pip install spacy && python -m spacy download en_core_web_sm)
USE_SPACY=false

# Firebase Configuration (for production push notifications - future feature)
# FIREBASE_CREDENTIALS=path/to/firebase-credentials.json
# FIREBASE_PROJECT_ID=your-project-id

# Database (future feature - currently using in-memory storage)
# DATABASE_URL=postgresql://user:password@localhost/mindmend

# Logging
LOG_LEVEL=INFO

# Security
# Generate a strong secret: python -c "import secrets; print(secrets.token_hex(32))"
# JWT_SECRET_KEY=your-64-character-hex-string-here
